{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["bun-types"]
  },
  "include": [
    "sentinel-workflow/**/*.ts",
    "scripts/**/*.ts",
    "api-server/**/*.ts",
    "agent-simulator/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "contracts"]
}
